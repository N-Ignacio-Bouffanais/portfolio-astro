---
import { Icon } from "astro-icon";
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<script>
  let state_menu: boolean = false;
  const x = document.getElementById("menu")!;
  const btn = document.getElementById("btn")!;
  btn.addEventListener("click", () => {
    state_menu = !state_menu;
    console.log(state_menu);
    state_menu
      ? x.classList.replace("hide", "show")
      : x.classList.replace("show", "hide");
  });
</script>

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <header>
      <nav class="navigation">
        <div class="left">
          <div class="menu">
            <button class="checkbtn" id="btn"
              ><Icon name="ic:baseline-dehaze" height="4rem" /></button
            >
            <ul class="hide" id="menu">
              <li><a href="">About me</a></li>
              <li><a href="">Projects</a></li>
			  <li><a href="">Resume</a></li>
            </ul>
          </div>
        </div>
        <div class="right">
          <ol>
            <li><a href="">About me</a></li>
            <li><a href="">Projects</a></li>
          </ol>
          <a class="resume" href="">Resume</a>
        </div>
      </nav>
    </header>
    <slot />
    <footer></footer>
  </body>
</html>
<style is:global lang="scss">
  $nav-color: #0071dc;
  $nav-height: 7rem;
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-size: 10px;
  }
  html {
    font-family: system-ui, sans-serif;
    background-color: #0e0e0e;
  }
  code {
    font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
      DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
  }
  header {
    background-color: #141313;
  }
  .navigation {
    height: $nav-height;
    a {
      color: aqua;
      text-decoration: none;
      margin: 0 1rem;
      font-size: 2.2rem;
    }
    ol {
      list-style: none;
    }
    display: flex;
    width: 100vw;
    justify-content: space-between;
    align-items: center;
    padding: 0 6vw;
    .left {
      display: flex;
      align-items: center;
      .menu {
        display: none;
        button {
          color: aqua;
          border: none;
          background-color: #141313;
        }
        a {
          color: white;
          font-size: 1.6rem;
          font-weight: 500;
          display: flex;
          align-items: center;
        }
      }
    }
    .right {
      display: flex;
      align-items: center;
      ol {
        display: flex;
      }
      .resume {
        border-radius: 0.4rem;
        border: 0.1rem solid #03e0e0;
        padding: 0.5rem 1rem;
      }
    }
  }

  @media (max-width: 700px) {
    .navigation {
      .left {
        .menu {
          a {
            cursor: pointer;
            justify-content: center;
            margin: 4rem auto;
            color: white;
            font-size: 2.5rem;
            &:active {
              color: #0071dc;
            }
          }
          display: block;
          .checkbtn {
            display: block;
            cursor: pointer;
          }
          .show {
            left: 0;
          }
          .hide {
            left: -100%;
          }
          ul {
            position: fixed;
            width: 100%;
            height: 100vh;
            background-color: #2f3640;
            top: $nav-height;
            left: 0;
            transition: all 0.5s;
            li {
              display: block;
            }
          }
        }
      }
	  .right{
		display: none;
	  }
    }
  }
</style>
